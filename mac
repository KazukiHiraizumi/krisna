;
;Krisna Macros
;
;;;;;;;;Common;;;;;;;kinc8	macro
kmov8	macro	dst,src
		movfw	src
		movwf	dst
		endm
kmov16	macro	dst,src
		movfw	src+1
		movwf	dst+1
		kmov8	dst,src
		endm
kmov24	macro	dst,src
		movfw	src+2
		movwf	dst+2
		kmov16	dst,src
		endm

kclr8	macro	fr
		movlw	fr
		movwf	FSR
		clrf	INDF
		endm
kclr16	macro	fr
		kclr8	fr
		incf	FSR,F
		clrf	INDF
		endm
kclr24	macro	fr
		kclr16	fr
		incf	FSR,F
		clrf	INDF
		endm

kset8	macro	num
		movlw	low(num)
		movwf	kreg
		endm
kset16	macro	num
		movlw	high(num)
		movwf	kreg
		movlw	low(num)
		movwf	kreg+1
		endm
kset24	macro	num
		movlw	high(num>>8)
		movwf	kreg
		movlw	high(num)
		movwf	kreg+1
		movlw	low(num)
		movwf	kreg+2
		endm
kset8c	macro	num
		local	exit
		kjmpnc	exit
		kset8	num
exit
		endm
kset8nc	macro	num
		local	exit
		kjmpc	exit
		kset8	num
exit
		endm
kload8	macro	fr
		movlw	fr
		movwf	FSR
		call	@kload8
		endm
kload16	macro	fr
		movlw	fr
		movwf	FSR
		call	@kload16
		endm
kload24	macro	fr
		movlw	fr
		movwf	FSR
		call	@kload24
		endm
kload32	macro	fr
		movlw	fr
		movwf	FSR
		call	@kload32
		endm

kstore8	macro	fr
		movlw	fr
		movwf	FSR
		call	@kstore8
		endm
kstore16	macro	fr
		movlw	fr
		movwf	FSR
		call	@kstore16
		endm
kstore24	macro	fr
		movlw	fr
		movwf	FSR
		call	@kstore24
		endm
kstore32	macro	fr
		movlw	fr
		movwf	FSR
		call	@kstore32
		endm
kstor8		macro	fr
		kstore8	fr
		endm
kstor16		macro	fr
		kstore16 fr
		endm
kstor24		macro	fr
		kstore24 fr
		endm
kstor32		macro	fr
		kstore32 fr
		endm
kswap8	macro	fr1,fr2
		movfw	fr1
		xorwf	fr2,F
		xorwf	fr2,W
		xorwf	fr2,F
		movwf	fr1
		endm

kjmpns	macro	fr,bt,lb
		btfss	fr,bt
		goto	lb
		endm

kjmps	macro	fr,bt,lb
		btfsc	fr,bt
		goto	lb
		endm

kjmpz	macro	lb
		kjmps	STATUS,Z,lb
		endm

kjmpnz	macro	lb
		kjmpns	STATUS,Z,lb
		endm

kjmpc	macro	lb
		kjmps	STATUS,C,lb
		endm

kjmpnc	macro	lb
		kjmpns	STATUS,C,lb
		endm

kcalls	macro	fr,bt,lb
		btfsc	fr,bt
		call	lb
		endm

kcallns	macro	fr,bt,lb
		btfss	fr,bt
		call	lb
		endm

kld8s	macro	fr,bt,fr1
		local	@exit
		kjmpns	fr,bt,@exit
		kload8	fr1
@exit
		endm
kld8ns	macro	fr,bt,fr1
		local	@exit
		kjmps	fr,bt,@exit
		kload8	fr1
@exit
		endm

kjmptbl	macro
		movwf	PCLATH
		movlw	high($+8)
		xorwf	PCLATH,F
		xorwf	PCLATH,W
		xorwf	PCLATH,F
		addlw	low($+4)
		btfsc	STATUS,C
		incf	PCLATH,F
		movwf	PCL
		endm

kloopns	macro	fr,bt
		local	lp
lp
		btfss	fr,bt
		goto	lp
		endm

kloops	macro	fr,bt
		local	lp
lp
		btfsc	fr,bt
		goto	lp
		endm

kmacs	macro	fr,bt,mac
		local	exit
		kjmpns	fr,bt,exit
		mac
exit
		endm

kmacns	macro	fr,bt,mac
		local	exit
		kjmps	fr,bt,exit
		mac
exit
		endm
krets	macro	fr,bt
		btfsc	fr,bt
		return
		endm
kretns	macro	fr,bt
		btfss	fr,bt
		return
		endm
kretls	macro	fr,bt,l
		local	@cont
		btfss	fr,bt
		goto	@cont
		kset8	l
		return
@cont
		endm
kretlns	macro	fr,bt,l
		local	@cont
		btfsc	fr,bt
		goto	@cont
		kset8	l
		return
@cont
		endm

