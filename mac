		endm
kcmpL8	macro	n
		movlw	n
		movwf	kreg+4
		kcmpU8	kreg+4
		endm
kcmpL16	macro	n
		movlw	high(n)
		movwf	kreg+4
		movlw	low(n)
		movwf	kreg+5
		kcmpU16	kreg+4
		endm
kmaxU8	macro	fr
		local	exit
		kcmpU8	fr
		kjmps	STATUS,C,exit
		kload8	fr
exit
		endm
kminU8	macro	fr
		local	exit
		kcmpU8	fr
		kjmpnc	exit
		kload8	fr
exit
		endm
