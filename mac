kinc8	macro
		incf	kreg,F
		endm
kinc16	macro
		local	exit
		incf	kreg+1,F
		kjmpnz	exit
		kinc8
exit
		endm
kinc24	macro
		local	exit
		incf	kreg+2,F
		kjmpnz	exit
		kinc16
exit
		endm
kdec8	macro
		decf	kreg,F
		endm
kdec16	macro
		local	exit
		decf	kreg+1,F
		incf	kreg+1,W
		kjmpnz	exit
		kdec8
exit
		endm
kdec24	macro
		local	exit
		decf	kreg+2,F
		incf	kreg+2,W
		kjmpnz	exit
		kdec16
exit
		endm

